<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <RootNamespace>Virtu_Toggler</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>False</AllowUnsafeBlocks>
    <ApplicationManifest>rsc\app.manifest</ApplicationManifest>
    <ApplicationIcon>rsc\virtu.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="rsc\virtu.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.PowerShell.SDK" Version="7.3.3" />
  </ItemGroup>

</Project>
